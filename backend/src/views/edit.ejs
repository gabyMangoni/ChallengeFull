<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Summary</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400&family=Roboto+Condensed:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap" rel="stylesheet">    
</head>
<body>
    <header class="d-flex"><div class="container"><div class="logo">Control de Gastos</div>
        <nav><a href="/"> Home</a> / <a href="/operations">Listado de comprobantes</a> / <a href="/create">Alta de comprobantes</a> </nav></div></header>
    <main class="d-flex">
        <div class="container">
        <h1>Edicion de Operaciones</h1>
        <form action="/update/<%= operations.id %>?_method=PUT" id="edit" method="POST" class="block">
        <div class="fr_label">
        <label class="fr_lbltexto" for="concept"> Concepto </label>
        <input type="text" name="concept" id="concept" value="<%= locals && locals.operations ? operations.concept : null %>" required>
    </div>
    <div class="fr_label">
        <label class="fr_lbltexto" for="amount"> Monto </label>
        <input type="text" name="amount" id="amount" value="<%= locals && locals.operations ? operations.amount : null %>" required>
    </div>
    <div class="fr_label">
        <label class="fr_lbltexto" for="date"> Fecha </label>
        <input type="date" name="date" id="date" value="<%= locals && locals.operations ? operations.date : null %>">
    </div>
    <div class="fr_label">
        <label class="fr_lbltexto" for="type"> Operación </label>
        <select name="categoryTypetId" id="categoryTypetId" disabled>
            <option value="" disabled selected >- Seleccione Operacion - </option>
                <% allTypes.forEach(type => { %>
                    <option value="<%= type.id %>"<% if (operations.categoryTypetId == type.id) { %> <%= 'selected' %><% }; %>><%= type.name %></option>
                    <% }); %>
        </select>
    </div>
    <div class="fr_label">
        <label class="fr_lbltexto" for="type"> Categoria de Operación </label>
        <select name="categoryId" id="categoryId">
            <option value="" disabled selected>- Seleccione tipo de operacion - </option>
                <% allCategories.forEach(category => { %>
                    <option value="<%= category.id %>"<% if (operations.categoryId == category.id) { %> <%= 'selected' %><% }; %>><%= category.name %></option>
                    <% }); %>
        </select>
    </div>
   
    <div class="fr_registro">
        
            <button type="button" onclick="goBack()">Volver</button>
      
        
            <button type="submit">Modificar</button>

           
        
    </div>

    <script>
        function goBack() {
          window.history.back();
        }
    </script>
</form> 

<form onSubmit="return confirm('¿Estas seguro de querer borrar esta operacion: <%= operations.name %>?') " action="/delete/<%= operations.id %>?_method=DELETE" method="POST">
    <button type="submit">Eliminar</button>
    </form>
    </div>
    </main>
    <footer class="d-flex"> <div class="container">Este es el footer</div></footer>
</body>
</html>